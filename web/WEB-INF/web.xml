<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.ecofield.controlUsuarios.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistroServlet</servlet-name>
        <servlet-class>com.ecofield.controlUsuarios.RegistroServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.ecofield.controlUsuarios.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PanelUsuarioServlet</servlet-name>
        <servlet-class>com.ecofield.controlUsuarios.PanelUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.ecofield.controlUsuarios.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IniciarTrabajoServlet</servlet-name>
        <servlet-class>com.ecofield.controlMaquinista.IniciarTrabajoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FinalizarTrabajoServlet</servlet-name>
        <servlet-class>com.ecofield.controlMaquinista.FinalizarTrabajoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminUsuarioServlet</servlet-name>
        <servlet-class>com.ecofield.controlAdmin.AdminUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminMaquinistasServlet</servlet-name>
        <servlet-class>com.ecofield.controlAdmin.AdminMaquinistasServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminParcelaServlet</servlet-name>
        <servlet-class>com.ecofield.controlAdmin.AdminParcelaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistroServlet</servlet-name>
        <url-pattern>/RegistroServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/DashboardServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PanelUsuarioServlet</servlet-name>
        <url-pattern>/PanelUsuarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IniciarTrabajoServlet</servlet-name>
        <url-pattern>/IniciarTrabajoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FinalizarTrabajoServlet</servlet-name>
        <url-pattern>/FinalizarTrabajoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminUsuarioServlet</servlet-name>
        <url-pattern>/AdminUsuarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminMaquinistasServlet</servlet-name>
        <url-pattern>/AdminMaquinistasServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminParcelaServlet</servlet-name>
        <url-pattern>/AdminParcelaServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
